<mp-vtabs 
  vtabs="{{vtabs}}" 
  activeTab="{{activeTab}}" 
  bindtabclick="onTabCLick"
  bindchange="onChange"
  class="test"
>
  <block wx:for="{{vtabs}}" wx:key="title" >
    <mp-vtabs-content tabIndex="{{index}}">
      <view class="vtabs-content-item">
      <view wx:for="{{item.goods}}" wx:key="id" class="item" bindtap="handleTop" data-id="{{item.id}}" data-name="{{item.title}}">
      <image src="http://localhost:5002{{item.poster}}" mode="widthFix"></image>
      <view>{{item.title}}</view>
      </view>
      </view>
    </mp-vtabs-content>
  </block>
</mp-vtabs>